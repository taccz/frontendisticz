{% extends 'layout/layout.njk' %}
{% set pageTitle = 'Homepage' %}
{% set isHomepage = true %}

{% block content %}
	<main role="main" id="main" class="main">
		<div class="b-intro">
			<div class="b-intro__inner">
				<div class="row-main">
					<h2 class="b-intro__title h1">
						Organizujeme vzdělávací akce
						<span class="b-intro__title-sub">
							pro <strong>frontendové vývojáře</strong>.
						</span>
					</h2>
				</div>
			</div>
		</div>

		<div class="u-pt-lg">
			<div class="row-main">
				<div class="u-max-width--lg">
					<p class="b-meetup u-mb-lg">
						<span class="b-meetup__icon">
							{{ iconSVG('meetup') }}
						</span>
						Sleduj nás na meetupu a žádná akce ti neunikne.
						Jsme v
						<a href="https://www.meetup.com/frontendisti/">Praze</a>,
						<a href="https://www.meetup.com/frontendisti-brno/">Brně</a>,
						<a href="https://www.meetup.com/frontendisti-plzen/">Plzni</a>,
						<a href="https://www.meetup.com/Frontendisti-cz-Ostrava/">Ostravě</a>.
					</p>
				</div>
			</div>
		</div>

		<div class="u-pt-lg u-bg-primary">
			<div class="row-main">
				<section role="region" class="s-social">
					<h2 class="u-vhide">
						Zastřešujeme {# TODO copywrite #}
					</h2>
					{% set socials = {
						items: [
							{
								icon: 'fb-community',
								title: 'Komunita',
								perex: 'Staň se členem naši početné komunity.'
							},
							{
								icon: 'fb-discussion',
								title: 'Diskuze',
								perex: 'Diskutuj s ostatními témata, co tě zajímají.'
							},
							{
								icon: 'fb-job',
								title: 'Práce',
								perex: 'Hledáš práci nebo skvělé lidi?'
							},
							{
								icon: 'youtube',
								title: 'Videa',
								perex: 'Nestihl jsi přijít osobně? Mrkni na videa na YouTube'
							},
							{
								icon: 'twitter',
								title: 'Zprávy',
								perex: 'Rychlý přehled o všem důležitém.'
							},
							{
								icon: 'instagram',
								title: 'Fotky',
								perex: 'Komunita na fotkách'
							}
						]
					} %}
					{% include './inc/crossroad/socials.njk' %}
				</section>
			</div>
		</div>

	</main>
{% endblock %}

{% set c = cycler('', 'u-bg-inverse') %}
{% for item in sections %}
	<section role="region" class="c-cards u-pt-xl {{ c.next() }}">
		<div class="row-main">
			<div class="u-max-width--8-12 u-mx-auto u-mb-md">
				<h2>
					{{ item.title }}
				</h2>
				<p>
					{{ item.place }}
				</p>
			</div>
			<div class="c-cards__wrap u-mb-xl">
				<div class="c-cards__list grid grid--y-xl ">
					{% for person in item.persons %}
						<div class="c-cards__item grid__cell grid__cell--eq size--6-12@sm size--4-12@md">
							<article role="article" class="b-card">
								<h3 class="b-card__title u-color-secondary">
									{{ person.topic }}
								</h3>
								<div class="b-card__img">
									<img src="{{ assets.images }}/illust/{{ person.img }}.jpg" alt="" width="150" height="150">
								</div>
								<p class="b-card__info">
									<a href="{{ person.twitter }}" class="b-card__name" target="_blank" rel="noopener noreferrer">
										{{ person.name }}
									</a>
									<span>
										{{ person.job }}
									</span>
								</p>
								<ul class="b-card__list">
									<li class="b-card__item">
										<a href="{{ person.youtubeHref }}" class="b-card__link b-card__link--icon" target="_blank" rel="noopener noreferrer">
											{{ iconSVG('youtube', 'b-card__icon') }}
											Video z prednášky
										</a>
									</li>
									<li class="b-card__item">
										<a href="{{ person.slideshareHref }}" class="b-card__link b-card__link--icon" target="_blank" rel="noopener noreferrer">
											{{ iconSVG('slideshare', 'b-card__icon') }}
											Prezentace
										</a>
									</li>
								</ul>
							</article>
						</div>
					{% endfor %}
				</div>
				<p class="u-mx-auto u-mt-lg">
					<a href="#" class="btn">
						<span class="btn__text">
							Všechno v playlistu
						</span>
					</a>
				</p>
			</div>
		</div>
	</section>
{% endfor %}
